{
  "compilerOptions": {
    "target": "ESNext",
    "module": "nodenext",
    "lib": ["es2021", "dom"],
    "outDir": "./dist",
    "baseUrl": "./",
    "declaration": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": ["./node_modules/@types"],
    "paths": {
      "/opt/nodejs/oigamez-http.js": [
        "./lambda/packages/http/nodejs/oigamez-http.ts"
      ],
      "/opt/nodejs/oigamez-security.js": [
        "./lambda/packages/security/nodejs/oigamez-security.ts"
      ],
      "/opt/nodejs/oigamez-services.js": [
        "./lambda/packages/services/nodejs/oigamez-services.ts"
      ]
    }
  },
  "exclude": ["node_modules", "cdk.out", "dist"]
}
