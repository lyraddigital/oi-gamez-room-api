{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "lib": [
      "es2021",
      "dom"
    ],
    "outDir": "./dist",
    "baseUrl": "./",
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "paths": {
      "@oigamez/configuration": [
        "./lambda/packages/configuration/src"
      ],
      "@oigamez/dynamodb": [
        "./lambda/packages/dynamodb/src"
      ],
      "@oigamez/mappers": [
        "./lambda/packages/mappers/src"
      ],
      "@oigamez/models": [
        "./lambda/packages/models/src"
      ],
      "@oigamez/repositories": [
        "./lambda/packages/repositories/src"
      ],
      "@oigamez/responses": [
        "./lambda/packages/responses/src"
      ],
      "@oigamez/rule-sets": [
        "./lambda/packages/rule-sets/src"
      ],
      "@oigamez/services": [
        "./lambda/packages/services/src"
      ],
      "@oigamez/validators": [
        "./lambda/packages/validators/src"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "cdk.out",
    "dist"
  ],  
}
