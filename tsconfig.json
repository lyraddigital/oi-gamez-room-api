{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "lib": [
      "es2021",
      "dom"
    ],
    "outDir": "./dist",
    "baseUrl": "./",
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "paths": {
      "/opt/nodejs/oigamez-core": [
        "./lambda/packages/core/nodejs/oigamez-core"
      ],
      "/opt/nodejs/oigamez-http": [
        "./lambda/packages/http/nodejs/oigamez-http"
      ],
      "/opt/nodejs/oigamez-security": [
        "./lambda/packages/security/nodejs/oigamez-security"
      ],
      "@oigamez/communication": [
        "./lambda/packages/communication/src"
      ],
      "@oigamez/dynamodb": [
        "./lambda/packages/dynamodb/src"
      ],
      "@oigamez/event-bridge": [
        "./lambda/packages/event-bridge/src"
      ],
      "@oigamez/mappers": [
        "./lambda/packages/mappers/src"
      ],
      "@oigamez/repositories": [
        "./lambda/packages/repositories/src"
      ],
      "@oigamez/rule-sets": [
        "./lambda/packages/rule-sets/src"
      ],
      "@oigamez/services": [
        "./lambda/packages/services/src"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "cdk.out",
    "dist"
  ],  
}
